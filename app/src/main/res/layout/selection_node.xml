<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bhge.wirelineassistant.GETextView
        android:id="@+id/selectionText"
        android:layout_width="match_parent"
        android:textSize="@dimen/regular_text_size"
        android:text="Selection_Title"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryBlue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_height="22dp">

        <CheckBox
            android:id="@+id/optionSelection"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Selection Option"/>

        <Spinner
            android:id="@+id/selectionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:paddingRight="80dp"
            android:textColor="@color/colorPrimaryBlue"></Spinner>
    </LinearLayout>

</LinearLayout>
