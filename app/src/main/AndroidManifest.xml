<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhge.wirelineassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bhge_letters"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bhge_letters"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CCActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GE_Default" />
        <activity android:name=".testActivity" />
        <activity
            android:name=".displaySetupActivity"
            android:label="@string/title_activity_cc_display_setup"
            android:screenOrientation="portrait"
            android:theme="@style/GE_Default" />
        <activity android:name=".MPCActivity"></activity>
    </application>

</manifest>